<h1>Works#index</h1>
<p>Find me in app/views/works/index.html.erb</p>

<table>
  <thead>
    <tr>
      <th>
        Serial
      </th>
      <th>
        Usuario
      </th>
      <th>
        Categoria
      </th>
    </tr>
  </thead>
  <tbody>
    <% @works.each do |w| %>
    <tr>
      <td>
        <%= w.inventory.serial %>
      </td>
      <td>
        <%= w.user.name %>
      </td>
      <td>
        <%= w.inventory.category.name %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
